َرِضَ الْعَبْدُ أَوْ سَافَرَ كُتِبَ لَهُ مَا كَانَ يَعْمَلُ صَحِيحًا مُقِيمًا...","translation":"جب اللہ کا بندہ بیمار ہوتا ہے یا سفر پر جاتا ہے، تو اسے وہی اجر ملتا ہے جو وہ تندرست ہونے یا گھر پر رہنے کی حالت میں کرتا تھا۔","refrence":"صحیح بخاری - 2996"},{"arabic":"إِنَّ الدُّعَاءَ هُوَ الْعِبَادَةُ...","translation":"بے شک دعا ہی عبادت ہے۔","refrence":"سنن ابی داؤد - 1479"},{"arabic":"لَا يُؤْمِنُ أَحَدُكُمْ حَتَّى يُحِبَّ لِأَخِيهِ مَا يُحِبُّ لِنَفْسِهِ...","translation":"تم میں سے کوئی شخص اس وقت تک مومن نہیں ہو سکتا جب تک کہ اپنے بھائی کے لیے وہی پسند نہ کرے جو اپنے لیے پسند کرتا ہے۔","refrence":"صحیح بخاری - 13"},{"arabic":"إِنَّ الرِّزْقَ لَيَطْلُبُ الْعَبْدَ أَكْثَرَ مِمَّا يَطْلُبُهُ أَجَلُهُ...","translation":"بے شک رزق بندے کو اس کی موت سے زیادہ تلاش کرتا ہے۔","refrence":"سنن ابن ماجہ - 2144"},{"arabic":"إِنَّ اللَّهَ جَمِيلٌ يُحِبُّ الْجَمَالَ...","translation":"بے شک اللہ خوبصورت ہے اور وہ خوبصورتی کو پسند کرتا ہے۔","refrence":"صحیح مسلم - 91"},{"arabic":"اتَّقُوا الظُّلْمَ فَإِنَّ الظُّلْمَ ظُلُمَاتٌ يَوْمَ الْقِيَامَةِ...","translation":"ظلم سے بچو، کیونکہ ظلم قیامت کے دن تاریکیاں ہوں گی۔","refrence":"صحیح مسلم - 2578"},{"arabic":"الرَّاحِمُونَ يَرْحَمُهُمُ الرَّحْمَٰنُ...","translation":"رحم کرنے والوں پر رحمن رحم کرتا ہے۔ زمین پر رحم کرو، آسمان سے تم پر رحم کیا جائے گا۔","refrence":"سنن ترمذی - 1924"},{"arabic":"خَيْرُ النَّاسِ أَنْفَعُهُمْ لِلنَّاسِ...","translation":"لوگوں میں سب سے بہتر وہ ہے جو دوسروں کے لیے سب سے زیادہ فائدہ مند ہو۔","refrence":"سنن المعجم الاوسط - 5787"},{"arabic":"يَدُ اللَّهِ مَعَ الْجَمَاعَةِ...","translation":"اللہ کا ہاتھ جماعت کے ساتھ ہے۔","refrence":"سنن ترمذی - 2166"},{"arabic":"مَنْ دَلَّ عَلَى خَيْرٍ فَلَهُ مِثْلُ أَجْرِ فَاعِلِهِ...","translation":"جو شخص کسی کو نیکی کی طرف رہنمائی کرے گا، اسے بھی اتنا ہی اجر ملے گا جتنا اس عمل کرنے والے کو ملتا ہے۔","refrence":"صحیح مسلم - 1893"},{"arabic":"سِبَابُ الْمُسْلِمِ فُسُوقٌ وَقِتَالُهُ كُفْرٌ...","translation":"کسی مسلمان کو گالی دینا فسق ہے اور اس سے لڑنا کفر ہے۔","refrence":"صحیح بخاری - 48"},{"arabic":"إِنَّ اللَّهَ يُحِبُّ إِذَا عَمِلَ أَحَدُكُمْ عَمَلًا أَنْ يُتْقِنَهُ...","translation":"بے شک اللہ پسند کرتا ہے کہ جب تم میں سے کوئی کام کرے تو اسے احسن طریقے سے کرے۔","refrence":"سنن البیہقی - 5315"}],"ayats":[{"text":"وَإِذَا سَأَلَكَ عِبَادِي عَنِّي فَإِنِّي قَرِيبٌ ۖ أُجِيبُ دَعْوَةَ الدَّاعِ إِذَا دَعَانِ ۖ فَلْيَسْتَجِيبُوا لِي وَلْيُؤْمِنُوا بِي لَعَلَّهُمْ يَرْشُدُونَ","translation":"اور جب میرے بندے آپ سے میرے بارے میں پوچھیں تو میں قریب ہی، دعا کرنے والے کی دعا کو قبول کرتا ہوں جب وہ مجھے پکارتا ہے۔ پس انہیں چاہیے کہ میری بات مانیں اور مجھ پر ایمان لائیں تاکہ وہ ہدایت پائیں۔","refrence":"[قرآن 2:186]"},{"text":"لَا يُكَلِّفُ اللَّهُ نَفْسًا إِلَّا وُسْعَهَا","translation":"اللہ کسی جان کو اس کی طاقت سے زیادہ تکلیف نہیں دیتا۔","refrence":"[قرآن 2:286]"},{"text":"إِنَّ اللَّهَ لَا يُغَيِّرُ مَا بِقَوْمٍ حَتَّىٰ يُغَيِّرُوا مَا بِأَنفُسِهِمْ","translation":"بے شک اللہ کسی قوم کی حالت نہیں بدلتا جب تک وہ خود اپنے اندر تبدیلی نہ لائیں۔","refrence":"[قرآن 13:11]"},{"text":"وَلَقَدْ يَسَّرْنَا الْقُرْآنَ لِلذِّكْرِ فَهَلْ مِن مُّدَّكِرٍ","translation":"اور ہم نے قرآن کو نصیحت کے لیے آسان کر دیا ہے، تو کوئی ہے جو نصیحت حاصل کرے؟","refrence":"[قرآن 54:17]"},{"text":"إِنَّ مَعَ الْعُسْرِ يُسْرًا","translation":"بے شک مشکل کے ساتھ آسانی ہے۔","refrence":"[قرآن 94:6]"},{"text":"وَرَحْمَتِي وَسِعَتْ كُلَّ شَيْءٍ","translation":"اور میری رحمت ہر چیز کو گھیرے ہوئے ہے۔","refrence":"[قرآن 7:156]"},{"text":"وَتَوَكَّلْ عَلَى اللَّهِ وَكَفَىٰ بِاللَّهِ وَكِيلًا","translation":"اور اللہ پر بھروسہ کرو، اور اللہ کارساز کے لیے کافی ہے۔","refrence":"[قرآن 33:3]"},{"text":"فَإِنَّ مَعَ الْعُسْرِ يُسْرًا","translation":"پس بے شک مشکل کے ساتھ آسانی ہے۔","refrence":"[قرآن 94:5]"},{"text":"إِنَّ اللَّهَ مَعَ الصَّابِرِينَ","translation":"بے شک اللہ صبر کرنے والوں کے ساتھ ہے۔","refrence":"[قرآن 2:153]"},{"text":"فَاذْكُرُونِي أَذْكُرْكُمْ","translation":"پس تم مجھے یاد کرو، میں تمہیں یاد رکھوں گا۔","refrence":"[قرآن 2:152]"},{"text":"إِنَّ اللَّهَ غَفُورٌ رَّحِيمٌ","translation":"بے شک اللہ بخشنے والا مہربان ہے۔","refrence":"[قرآن 2:173]"},{"text":"يَا أَيُّهَا الَّذِينَ آمَنُوا اصْبِرُوا وَصَابِرُوا","translation":"اے ایمان والو! صبر کرو اور ثابت قدم رہو۔","refrence":"[قرآن 3:200]"},{"text":"إِنَّ اللَّهَ يُحِبُّ الْمُحْسِنِينَ","translation":"بے شک اللہ نیکی کرنے والوں سے محبت کرتا ہے۔","refrence":"[قرآن 3:134]"},{"text":"وَمَا تَوْفِيقِي إِلَّا بِاللَّهِ","translation":"اور میری کامیابی صرف اللہ کی مدد سے ہے۔","refrence":"[قرآن 11:88]"},{"text":"وَلَا تَيْأَسُوا مِن رَّوْحِ اللَّهِ","translation":"اور اللہ کی رحمت سے مایوس نہ ہو۔","refrence":"[قرآن 12:87]"},{"text":"إِنَّ اللَّهَ سَمِيعٌ بَصِيرٌ","translation":"بے شک اللہ سننے والا دیکھنے والا ہے۔","refrence":"[قرآن 40:20]"},{"text":"وَأُفَوِّضُ أَمْرِي إِلَى اللَّهِ","translation":"اور میں اپنا معاملہ اللہ کے سپرد کرتا ہوں۔","refrence":"[قرآن 40:44]"},{"text":"إِنَّ اللَّهَ لَا يَظْلِمُ النَّاسَ شَيْئًا","translation":"بے شک اللہ لوگوں پر ذرا بھی ظلم نہیں کرتا۔","refrence":"[قرآن 10:44]"},{"text":"وَعَسَىٰ أَن تَكْرَهُوا شَيْئًا وَهُوَ خَيْرٌ لَّكُمْ","translation":"اور ہو سکتا ہے کہ تم کسی چیز کو ناپسند کرو اور وہ تمہارے لیے بہتر ہو۔","refrence":"[قرآن 2:216]"},{"text":"وَهُوَ مَعَكُمْ أَيْنَ مَا كُنتُمْ","translation":"اور وہ تمہارے ساتھ ہے جہاں کہیں بھی تم ہو۔","refrence":"[قرآن 57:4]"},{"text":"لَا تَحْزَنْ إِنَّ اللَّهَ مَعَنَا","translation":"غم نہ کرو، بے شک اللہ ہمارے ساتھ ہے۔","refrence":"[قرآن 9:40]"},{"text":"وَإِذَا مَرِضْتُ فَهُوَ يَشْفِينِ","translation":"اور جب میں بیمار ہوتا ہوں تو وہی مجھے شفا دیتا ہے۔","refrence":"[قرآن 26:80]"},{"text":"وَمَنْ يَتَوَكَّلْ عَلَى اللَّهِ فَهُوَ حَسْبُهُ","translation":"اور جو اللہ پر بھروسہ کرتا ہے تو وہ اس کے لیے کافی ہے۔","refrence":"[قرآن 65:3]"},{"text":"إِنَّ اللَّهَ يُحِبُّ الْمُتَوَكِّلِينَ","translation":"بے شک اللہ بھروسہ کرنے والوں سے محبت کرتا ہے۔","refrence":"[قرآن 3:159]"},{"text":"وَإِلَىٰ اللَّهِ تُرْجَعُ الْأُمُورُ","translation":"اور تمام معاملات اللہ کی طرف لوٹائے جاتے ہیں۔","refrence":"